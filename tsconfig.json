{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS", // Use CommonJS module format
    "lib": ["DOM", "ES5"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
